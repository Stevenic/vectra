{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "esModuleInterop": true,
        "lib": ["ES2021", "DOM"],
        "outDir": "./lib",
        "rootDir": "./src",
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ]
}