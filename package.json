{
    "name": "vectra",
    "author": "Steven Ickman",
    "description": "A lightweight, file-backed vector database for Node.js and browsers with Pinecone-compatible filtering and hybrid BM25 search.",
    "version": "0.12.3",
    "license": "MIT",
    "keywords": [
        "vector-database",
        "embeddings",
        "semantic-search",
        "rag",
        "retrieval-augmented-generation",
        "openai",
        "azure-openai",
        "cosine-similarity",
        "bm25",
        "hybrid-search",
        "local-database",
        "llm",
        "ai",
        "browser",
        "electron"
    ],
    "bugs": {
        "url": "https://github.com/Stevenic/vectra/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Stevenic/vectra.git"
    },
    "homepage": "https://github.com/Stevenic/vectra#readme",
    "main": "./lib/index.js",
    "module": "./lib/index.js",
    "browser": "./lib/browser.js",
    "types": "./lib/index.d.ts",
    "exports": {
        ".": {
            "node": {
                "types": "./lib/index.d.ts",
                "import": "./lib/index.js",
                "require": "./lib/index.js"
            },
            "browser": {
                "types": "./lib/browser.d.ts",
                "default": "./lib/browser.js"
            },
            "default": "./lib/index.js"
        },
        "./browser": {
            "types": "./lib/browser.d.ts",
            "default": "./lib/browser.js"
        },
        "./node": {
            "types": "./lib/index.d.ts",
            "import": "./lib/index.js",
            "require": "./lib/index.js"
        }
    },
    "bin": {
        "vectra": "./bin/vectra.js"
    },
    "engines": {
        "node": ">=20.x"
    },
    "typesVersions": {
        "<3.9": {
            "*": [
                "_ts3.4/*"
            ]
        }
    },
    "dependencies": {
        "axios": "^1.9.0",
        "buffer": "^6.0.3",
        "cheerio": "^1.0.0",
        "dotenv": "^16.5.0",
        "gpt-tokenizer": "^3.4.0",
        "json-colorizer": "^3.0.1",
        "openai": "^4.97.0",
        "turndown": "^7.2.0",
        "uuid": "^11.1.0",
        "wink-bm25-text-search": "^3.1.2",
        "wink-nlp": "^2.3.2",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@types/assert": "^1.5.11",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.15.11",
        "@types/proxyquire": "^1.3.31",
        "@types/rewire": "^2.5.30",
        "@types/sinon": "^21.0.0",
        "@types/turndown": "^5.0.5",
        "@types/uuid": "10.0.0",
        "@types/yargs": "17.0.33",
        "mocha": "11.2.2",
        "npm-run-all": "^4.1.5",
        "nyc": "^17.1.0",
        "proxyquire": "^2.1.3",
        "rewire": "^9.0.1",
        "rimraf": "^5.0.1",
        "shx": "^0.4.0",
        "sinon": "^21.0.1",
        "ts-mocha": "11.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.8.3"
    },
    "scripts": {
        "build": "tsc -b",
        "build:watch": "tsc -b --watch",
        "clean": "rimraf lib tsconfig.tsbuildinfo",
        "clean:all": "rimraf _ts3.4 lib tsconfig.tsbuildinfo node_modules",
        "lint": "eslint **/src/**/*.{j,t}s{,x} --fix --no-error-on-unmatched-pattern",
        "test": "npm-run-all build test:mocha",
        "test:mocha": "nyc ts-mocha src/**/*.spec.ts --timeout 10000",
        "test:watch": "ts-mocha src/**/*.spec.ts --timeout 10000 --watch",
        "test:coverage": "nyc --reporter=html --reporter=text ts-mocha src/**/*.spec.ts --timeout 10000",
        "prepublishOnly": "yarn run clean && yarn run build && yarn test",
        "publish:check": "yarn run clean && yarn run build && yarn test && yarn publish --dry-run"
    },
    "files": [
        "_ts3.4",
        "lib",
        "bin"
    ],
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}