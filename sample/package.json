{
    "name": "vectra-sample",
    "version": "1.0.0",
    "description": "A simple console app that can search over a Vectra local index.",
    "author": "Steven Ickman",
    "license": "MIT",
    "main": "./lib/index.js",
    "scripts": {
        "build": "tsc --build",
        "clean": "rimraf node_modules lib tsconfig.tsbuildinfo",
        "lint": "eslint **/**/src/**/*.{j,t}s{,x} --fix --no-error-on-unmatched-pattern",
        "start": "tsc --build && node ./lib/index.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "watch": "nodemon --watch ./src -e ts --exec \"yarn start\""
    },
    "repository": {
        "type": "git",
        "url": "https://github.com"
    },
    "dependencies": {
        "vectra": "link:..",
        "openai": "^3.2.1",
        "dotenv": "^8.2.0"
    },
    "devDependencies": {
        "@types/dotenv": "6.1.1",
        "nodemon": "~1.19.4",
        "tslint": "~5.20.0",
        "typescript": "^4.6.4"
    }
}
